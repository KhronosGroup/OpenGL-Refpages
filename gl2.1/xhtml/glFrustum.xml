                                <mml:mn>0</mml:mn>
                            </mml:mtd>
                        </mml:mtr>
                        <mml:mtr>
                            <mml:mtd>
                                <mml:mn>0</mml:mn>
                            </mml:mtd>
                            <mml:mtd>
                                <mml:mfenced open="" close="">
                                    <mml:mfrac>
                                        <mml:mfenced open="" close="">
                                            <mml:mrow>
                                                <mml:mn>2</mml:mn>
                                                <mml:mo>⁢</mml:mo>
                                                <mml:mi mathvariant="italic">nearVal</mml:mi>
                                            </mml:mrow>
                                        </mml:mfenced>
                                        <mml:mfenced open="" close="">
